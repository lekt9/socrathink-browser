{
  "appId": "com.innatical.socrathink",
  "productName": "Socrathink",
  "nsis": {
    "include": "static/installer.nsh"
  },
  "generateUpdatesFilesForAllChannels": true,
  "asar": true,
  "directories": {
    "output": "dist",
    "buildResources": "static/icons"
  },
  "files": [
    "build/**/*",
    "package.json",
    "static/**/*"
  ],
  "publish": [
    "github",
    {
      "provider": "snapStore",
      "repo": "socrathink",
      "channels": [
        "stable"
      ]
    }
  ],
  "deb": {
    "fpm": [
      "static/socrathink.metainfo.xml=/usr/share/metainfo/socrathink.metainfo.xml"
    ]
  },
  "rpm": {
    "fpm": [
      "static/socrathink.metainfo.xml=/usr/share/metainfo/socrathink.metainfo.xml"
    ]
  },
  "pacman": {
    "fpm": [
      "static/socrathink.metainfo.xml=/usr/share/metainfo/socrathink.metainfo.xml"
    ]
  },
  "linux": {
    "category": "Network",
    "executableName": "socrathink",
    "desktop": {
      "Comment": "Browse the Web",
      "GenericName": "Internet",
      "StartupNotify": false,
      "Categories": "Internet"
    },
    "target": [
      {
        "target": "AppImage",
        "arch": [
          "x64",
          "arm64"
        ]
      },
      {
        "target": "deb",
        "arch": [
          "x64",
          "arm64"
        ]
      },
      {
        "target": "rpm",
        "arch": [
          "x64",
          "arm64"
        ]
      },
      {
        "target": "pacman",
        "arch": [
          "x64",
          "arm64"
        ]
      },
      {
        "target": "tar.gz",
        "arch": [
          "x64",
          "arm64"
        ]
      },
      {
        "target": "snap",
        "arch": [
          "x64",
          "arm64"
        ]
      }
    ]
  },
  "win": {
    "target": [
      {
        "target": "nsis-web",
        "arch": [
          "x64",
          "ia32"
        ]
      },
      {
        "target": "zip",
        "arch": [
          "x64",
          "ia32"
        ]
      }
    ],
    "extraFiles": [
      {
        "from": "build/worker.bundle.js",
        "to": "resources/worker.bundle.js"
      }
    ]
  },
  "mac": {
    "category": "public.app-category.navigation",
    "target": [
      {
        "target": "default",
        "arch": "universal"
      }
    ],
    "extraFiles": [
      {
        "from": "build/worker.bundle.js",
        "to": "Resources/worker.bundle.js"
      }
    ]
  },
  "fileAssociations": [
    {
      "name": "Document",
      "description": "socrathink",
      "role": "Viewer",
      "ext": "html"
    }
  ],
  "protocols": [
    {
      "name": "socrathink",
      "role": "Viewer",
      "schemes": [
        "http",
        "https"
      ]
    }
  ]
}