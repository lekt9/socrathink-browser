{
  "appId": "com.theclarityproject.socrathink",
  "productName": "Socrathink",
  "nsis": {
    "include": "static/installer.nsh"
  },
  "generateUpdatesFilesForAllChannels": true,
  "asar": true,
  "directories": {
    "output": "dist",
    "buildResources": "static/icons"
  },
  "files": [
    "build/**/*",
    "package.json",
    "static/**/*"
  ],
  "publish": [
    {
      "provider": "github",
      "owner": "The-Clarity-Projekt",
      "repo": "socrathink-browser",
      "releaseType": "release"
    }
  ],
  "deb": {
    "fpm": [
      "static/socrathink.metainfo.xml=/usr/share/metainfo/socrathink.metainfo.xml"
    ]
  },
  "rpm": {
    "fpm": [
      "static/socrathink.metainfo.xml=/usr/share/metainfo/socrathink.metainfo.xml"
    ]
  },
  "pacman": {
    "fpm": [
      "static/socrathink.metainfo.xml=/usr/share/metainfo/socrathink.metainfo.xml"
    ]
  },
  "linux": {
    "target": [
      {
        "target": "AppImage",
        "arch": [
          "x64",
          "arm64"
        ]
      }
    ],
    "category": "Network",
    "executableName": "socrathink",
    "desktop": {
      "Name": "Socrathink",
      "Comment": "Socrathink Browser",
      "Categories": "Network;WebBrowser;"
    },
    "publish": ["github"]
  },
  "win": {
    "target": [
      {
        "target": "nsis-web",
        "arch": [
          "x64",
          "ia32"
        ]
      },
      {
        "target": "zip",
        "arch": [
          "x64",
          "ia32"
        ]
      }
    ],
    "extraFiles": [
      {
        "from": "build/worker.bundle.js",
        "to": "resources/worker.bundle.js"
      }
    ],
    "publish": ["github"]
  },
  "mac": {
    "category": "public.app-category.navigation",
    "target": [
      {
        "target": "default",
        "arch": "universal"
      }
    ],
    "extraFiles": [
      {
        "from": "build/worker.bundle.js",
        "to": "Resources/worker.bundle.js"
      }
    ],
    "mergeASARs": false,
    "publish": ["github"]
  },
  "fileAssociations": [
    {
      "name": "Document",
      "description": "socrathink",
      "role": "Viewer",
      "ext": "html"
    }
  ],
  "protocols": [
    {
      "name": "socrathink",
      "role": "Viewer",
      "schemes": [
        "http",
        "https"
      ]
    }
  ]
}